    <style>
      .custom-file-upload {
        position: relative;
        display: inline-block;
        width: 100%;
        text-align: center;
      }

      .custom-file-upload input[type="file"] {
        display: none;
      }

      .upload-label {
        background: #ff6600;
        color: #fff;
        padding: 12px 25px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
      }

      .upload-label:hover {
        background: #e65c00;
        transform: translateY(-2px);
      }

      .upload-label i {
        font-size: 20px;
      }

      .image-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }

      .image-preview img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid #ddd;
        transition: transform 0.3s;
      }

      .image-preview img:hover {
        transform: scale(1.05);
        border-color: #ff6600;
      }
    </style>
